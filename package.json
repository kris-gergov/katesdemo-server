{
  "name": "production_backend_kate_app",
  "version": "1.0.0",
  "description": "Express backend for Kate app",
  "main": "src/app.ts",
  "scripts": {
    "start": "npm run build && cross-env ENV_FILE=./.env.prod node bin/app.js",
    "dev": "cross-env ENV_FILE=./.env.dev nodemon",
    "build": "swc src -d bin --source-maps --copy-files",
    "build:tsc": "tsc && tsc-alias",
    "test": "cross-env ENV_FILE=./.env.test jest --forceExit --verbose",
    "test:coverage": "cross-env ENV_FILE=./.env.test jest --forceExit --coverage",
    "lint": "eslint --ignore-path .gitignore --ext .ts src/",
    "lint:fix": "npm run lint -- --fix",
    "deploy:prod": "npm run build && pm2 start ecosystem.config.js --only prod",
    "deploy:dev": "pm2 start ecosystem.config.js --only dev"
  },
  "author": "Kris Gergov",
  "license": "ISC",
  "dependencies": {
    "@faker-js/faker": "^7.2.0",
    "@types/bcrypt": "^5.0.0",
    "@types/dotenv-parse-variables": "^2.0.1",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.35",
    "@types/validator": "^13.7.2",
    "@types/yamljs": "^0.2.31",
    "bcrypt": "^5.0.1",
    "connect": "^3.7.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv-extended": "^2.9.0",
    "dotenv-parse-variables": "^2.0.0",
    "express": "^4.18.1",
    "express-openapi-validator": "^4.13.7",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongodb-memory-server": "^8.6.0",
    "mongoose": "^6.3.5",
    "morgan": "^1.10.0",
    "morgan-body": "^2.6.6",
    "node-cache": "^5.1.2",
    "swagger-parser": "^10.0.3",
    "swagger-routes-express": "^3.3.1",
    "swagger-ui-express": "^4.5.0",
    "typescript": "^4.6.4",
    "validator": "^13.7.0",
    "winston": "^3.7.2",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@jest-mock/express": "^2.0.1",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.2.196",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/jest": "^28.1.0",
    "@types/lodash": "^4.14.182",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/winston": "^2.4.4",
    "cross-env": "^7.0.3",
    "jest": "^28.1.0",
    "nodemon": "^2.0.16",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.4",
    "ts-node": "^10.8.0",
    "tsconfig-paths": "^4.0.0"
  }
}
